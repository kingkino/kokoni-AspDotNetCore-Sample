@using Microsoft.AspNetCore.Identity
@using kokoni_transfer.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Login" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@UserManager.GetUserName(User)</button>
            </li>
        </ul>
    </form>
}